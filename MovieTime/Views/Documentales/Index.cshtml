@model IEnumerable<MovieTime.Models.Documentales>

@{
    ViewData["Title"] = "Documentales";
}


<h1>Lo que deseas ver en un solo lugar</h1>
<style>
    body {
        background-color: rgb(0, 0, 26);
    }
</style>
<style>
    h1 {
        color: white;
    }
</style>

<div align:"center">
    <iframe width="1125" height="600" src="https://www.youtube.com/embed/dwe06xjozJk" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<div align:"center">
    <iframe width="1125" height="600" src="https://www.youtube.com/embed/1NpYeHGWFs0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<p>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <img src="~/img/img-documentales.jpg" class="card-img-top" alt="...">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Fecha)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Genero)</p>
                        <p>

                            <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/img/edit.png" width="20" /></a> |
                            <a asp-action="Details" asp-route-id="@item.Id"><img src="~/img/details.png" width="20" /></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/img/delete.png" width="20" /></a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</p>


<p>
    <a type="button" class="btn btn-primary" asp-action="Create">Agregar</a>
</p>


