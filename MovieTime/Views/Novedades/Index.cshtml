@model IEnumerable<MovieTime.Models.Novedades>

@{
    ViewData["Title"] = "Novedades";
}

<h1>¡NO TE PIERDAS DE LO ÚLTIMO DEL CINE!</h1>
<style>
    body {
        background-color: #000000;
    }
</style>

<style>
    h1 {
        color: white;
    }
</style>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<style>
    h1 {
        color: white;
    }
</style>

<style>
    body {
        background-color: rgb(0, 0, 26);
    }
</style>

<section class="section-white">
    <div class="container">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/img/img-imagen9.png" />
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <img src="~/img/img-imagen8.jpg" />
                    <div class="carousel-caption">
                    </div>
                </div>
                <div class="item">
                    <img src="~/img/img-imagen10.jpg" />

                </div>
            </div>

            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</section>



<h1>Noticias recientes</h1>

<p>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <img src="~/img/img-novedades.jpg" class="card-img-top" alt="...">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Titulo)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Fecha)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Genero)</p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.Parrafo)</small></p>
                        <p>

                            <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/img/edit.png" width="20" /></a> |
                            <a asp-action="Details" asp-route-id="@item.Id"><img src="~/img/details.png" width="20" /></a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/img/delete.png" width="20" /></a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</p>

<p>
    <a type="button" class="btn btn-primary" asp-action="Create">Agregar</a>
</p>
